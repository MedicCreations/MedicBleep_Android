<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/clickLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">

            <com.clover.spika.enterprise.chat.views.RoundImageView
                android:id="@+id/lobbyImage"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                tools:src="@drawable/default_user_image" />

            <RelativeLayout
                android:id="@+id/unreadLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:contentDescription="@null"
                    android:src="@drawable/notification_icon" />

                <TextView
                    android:id="@+id/unreadText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="!"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageLayoutControl"
            android:layout_toRightOf="@+id/imageLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lobbyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="20sp" 
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/imageLayoutControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageLayout"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/imageLayout"
            android:background="@drawable/icon_tablearrow">

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>