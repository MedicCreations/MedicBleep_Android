<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    
    <RelativeLayout 
        android:id="@+id/room"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        
        <com.clover.spika.enterprise.chat.views.RoundImageView
	        android:id="@+id/img_room"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:background="@drawable/circle_with_white_border"
	        android:src="@drawable/add_photo"
	        tools:src="@drawable/@drawable/add_photo" />
        
        <com.clover.spika.enterprise.chat.views.RobotoThinEditText 
            android:id="@+id/et_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_room"
            android:layout_toEndOf="@+id/img_room"
            android:hint="Enter room name"
            android:layout_centerVertical="true"/>
        
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/txtUserNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/room"
        android:ems="13"
        />
    
    <com.clover.spika.enterprise.chat.views.pulltorefresh.PullToRefreshListView
        android:id="@+id/mainListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtUserNames"
        android:background="@color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:listSelector="@color/transparent"
        android:scrollbars="none" />

    <com.clover.spika.enterprise.chat.views.RobotoRegularTextView
        android:id="@+id/noItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_items"
        android:textColor="@color/default_blue"
        android:textSize="30sp"
        android:visibility="gone" />

</RelativeLayout>
