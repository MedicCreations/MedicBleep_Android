<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/transparent" >

    <RelativeLayout
        android:id="@+id/loading_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <View
            android:id="@+id/spliter3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/loading_bar_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spliter3"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null" />

        <View
            android:id="@+id/spliter"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/loading_bar_img"
            android:layout_marginTop="10dp"
            android:background="@color/text_blue" />
    </RelativeLayout>

    <View
        android:id="@+id/spliter2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/loading_bar" />

    <RelativeLayout
        android:id="@+id/messagesWholeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spliter2" >

        <!-- start: Me message layout -->

        <RelativeLayout
            android:id="@+id/meItemMsgLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <!-- start: MessageLayout -->

            <LinearLayout
                android:id="@+id/defaultMsgLayoutMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/timeMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/mePersonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/meMsgContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- end: MessageLayout -->
        </RelativeLayout>

        <!-- end: Me message layout -->


        <!-- start: You message layout -->

        <RelativeLayout
            android:id="@+id/youItemMsgLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <!-- start: MessageLayout -->

            <LinearLayout
                android:id="@+id/defaultMsgLayoutYou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/timeYou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/youPersonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/black" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/youMsgContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="10dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- end: MessageLayout -->

        </RelativeLayout>

        <!-- end: You message layout -->

    </RelativeLayout>

</RelativeLayout>