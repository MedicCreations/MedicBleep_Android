<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.clover.spika.enterprise.chat.views"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/transparent" >

    <RelativeLayout
        android:id="@+id/loading_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <View
            android:id="@+id/spliter3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/loading_bar_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spliter3"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null" />

        <View
            android:id="@+id/spliter"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/loading_bar_img"
            android:layout_marginTop="10dp"
            android:background="@color/text_blue" />

        <View
            android:id="@+id/spliter2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/spliter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dateSeparator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_bar"
        android:layout_margin="10dp" >

        <View
            android:id="@+id/whiteDivider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sectionDate"
            android:background="@color/text_time_gray" />

        <com.clover.spika.enterprise.chat.views.RobotoRegularTextView
            android:id="@+id/sectionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/text_time_gray" />

        <View
            android:id="@+id/whiteDivider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sectionDate"
            android:background="@color/text_time_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/messagesWholeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateSeparator" >

        <!-- start: Me message layout -->

        <RelativeLayout
            android:id="@+id/meItemMsgLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <!-- start: MessageLayout -->

            <LinearLayout
                android:id="@+id/defaultMsgLayoutMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <com.clover.spika.enterprise.chat.views.RobotoRegularTextView
                        android:id="@+id/timeMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/text_time_gray"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.clover.spika.enterprise.chat.views.RobotoRegularTextView
                        android:id="@+id/mePersonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/default_blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <include layout="@layout/item_chat_text_me" />

                <include layout="@layout/item_chat_sound_me" />

                <include layout="@layout/item_chat_video_me" />

                <include layout="@layout/item_chat_location_me" />

                <include layout="@layout/item_chat_image_me" />
            </LinearLayout>

            <!-- end: MessageLayout -->
        </RelativeLayout>

        <!-- end: Me message layout -->


        <!-- start: You message layout -->

        <RelativeLayout
            android:id="@+id/youItemMsgLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <!-- start: MessageLayout -->

            <LinearLayout
                android:id="@+id/defaultMsgLayoutYou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" >

                    <com.clover.spika.enterprise.chat.views.RobotoRegularTextView
                        android:id="@+id/timeYou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/text_time_gray"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.clover.spika.enterprise.chat.views.RobotoRegularTextView
                        android:id="@+id/youPersonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/default_blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <include layout="@layout/item_chat_text_you" />

                <include layout="@layout/item_chat_sound_you" />

                <include layout="@layout/item_chat_video_you" />

                <include layout="@layout/item_chat_location_you" />

                <include layout="@layout/item_chat_image_you" />
            </LinearLayout>

            <!-- end: MessageLayout -->

        </RelativeLayout>

        <!-- end: You message layout -->

    </RelativeLayout>

</RelativeLayout>